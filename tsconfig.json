{
    "compilerOptions": {
      "target": "es6",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx", 
      "incremental": true,
      "baseUrl": ".", 
      "paths": {
        "@/*": ["src/*"] 
      }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"], 
    "exclude": ["node_modules"]
  }
  